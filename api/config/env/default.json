{
    "app": {
        "name": "atendimento-backend",
        "baseRoute": "/atendimento-backend",
        "port": 8094
    },    
    "log": {
        "debug": true,
        "bunyan": {
            "name": "Application",
            "streams": [
                {
                    "level": "debug",
                    "type": "rotating-file",
                    "path": "log/{hostname}.log",
                    "period": "1d",
                    "count": 3
                }
            ]
        }
    },
    "authorization": {
        "enabled": false,
        "scheme": "Bearer",
        "jwt": {
            "secret": "49b4e2f9-ec31-4758-bae5-741a80e0e8de",
            "expiresIn": "1h"
        }
    },
    "audit": {
        "enabled": true,
        "printLog": true,
        "bunyan": {
            "name": "Audit",
            "streams": [
                {
                    "level": "debug",
                    "type": "rotating-file",
                    "path": "log/audit.log",
                    "period": "1d",
                    "count": 3
                }
            ]
        }
    },
    "origin": {
        "ignore": ["/healthcheck", "/doc"],
        "require": {
            "application": true,
            "channel": true,
            "device": false
        }
    },
    "soap": {
